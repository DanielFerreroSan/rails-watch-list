<h1>Edit List</h1>

<%= form_with(model: @list) do |f| %>
  <% if @list.errors.any? %>
    <div class="errors">
      <ul>
        <% @list.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "List Name" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <%= f.submit "Update List", class: "btn-header" %>
<% end %>

<%= link_to "Back to Lists", lists_path, class: "btn-header" %>
